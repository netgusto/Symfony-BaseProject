<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{{ apptitle }}</title>
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

        {% block basestylesheets %}
        <!-- bootstrap 3.0.2 -->
        <link href="{{ asset('css/lib/app.bootstrap.css') }}" rel="stylesheet" type="text/css" />
        <!-- font Awesome -->
        <link href="{{ asset('css/lib/font-awesome.css') }}" type="text/css" rel="stylesheet" />
        <!-- Ionicons -->
        <link href="{{ asset('vendor/almasaeed2010/adminlte/css/ionicons.min.css') }}" rel="stylesheet" type="text/css" />
        <!-- Theme style -->
        <link href="{{ asset('css/lib/admin.adminlte.css') }}" rel="stylesheet" type="text/css" />
        {% endblock %}

        {% block stylesheets %}
        {% endblock %}

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
    </head>
    <body class="{% block bodyclass %}skin-blue{% endblock %}">

        {% block header %}
        <!-- header logo: style can be found in header.less -->
        <header class="header">
            <a href="{{ path(apphomeroute) }}" class="logo">
                <!-- Add the class icon to your logo image or logo icon to add the margining -->
                {{ appname }}
            </a>

            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-right">
                    {# {% include '::_partials/admin/navbar-right.html.twig' %} #}
                </div>
            </nav>
        </header>
        {% endblock %}

        <div class="wrapper row-offcanvas row-offcanvas-left">

            <!-- Left side column. contains the logo and sidebar -->
            <aside class="left-side sidebar-offcanvas">
                <!-- sidebar: style can be found in sidebar.less -->
                <section class="sidebar">

                    <!-- Sidebar user panel -->
                    <div class="user-panel">
                        <div class="pull-left image">
                            <img src="{{ asset('vendor/almasaeed2010/adminlte/img/avatar3.png') }}" class="img-circle" alt="User Image" />
                        </div>
                        <div class="pull-left info">
                            <p>Hello, Jane</p>

                            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                        </div>
                    </div>
                    <!-- search form -->
                    <form action="#" method="get" class="sidebar-form">
                        <div class="input-group">
                            <input type="text" name="q" class="form-control" placeholder="Search..."/>
                            <span class="input-group-btn">
                                <button type='submit' name='seach' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </form>
                    <!-- /.search form -->

                    {# {% render(controller('NetgustoAdminLTEBundle:LeftMenu:index')) %} #}

                    {{ adminlte_leftmenu_render('NetgustoEmptyBundle:Builder:demoMenu') }}

                    {# {% include '::_partials/admin/sidebar.html.twig' %} #}
                </section>
                <!-- /.sidebar -->
            </aside>

            <!-- Right side column. Contains the navbar and content of the page -->
            <aside class="right-side">

                {# {% include '::_partials/admin/content-header.html.twig' %} #}

                <!-- Main content -->
                <section class="content">
                    {% block body %}{% endblock %}
                </section><!-- /.content -->
            </aside><!-- /.right-side -->
        </div><!-- ./wrapper -->

        {% block basejavascripts %}
        <script type="text/javascript" src="{{ asset('js/lib/require.js') }}"></script>
        <script type="text/javascript">

            require.config({
                baseUrl: '/js',
                paths: {
                    'jquery': '/js/lib/jquery',
                    'bootstrap': '/js/lib/bootstrap',
                    'adminlte/app': '{{ asset("vendor/almasaeed2010/adminlte/js/AdminLTE/app") }}'
                },
                shim: {
                    'bootstrap': {
                        deps: ['jquery']
                    }
                }
            });

            require(['admin/main']);
        </script>
        {% endblock %}
        {% block javascripts %}
        {% endblock %}

    </body>
</html>