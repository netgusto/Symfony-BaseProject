<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <title>{% block title %}Welcome !{% endblock %}</title>
    {% block basestylesheets %}
    <link href="{{ asset('css/lib/app.bootstrap.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/lib/font-awesome.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    {% block stylesheets %}
    {% endblock %}
    <script type="text/javascript" src="{{ asset('js/lib/modernizr.js') }}"></script>
</head>
<body class="{% block bodyclass %}{% endblock %}">
    <div class="container header">{% block header %}{% endblock %}</div>
    <div class="container content">{% block body %}{% endblock %}</div>
    <div class="container footer">{% block footer %}{% endblock %}</div>

    {% block basejavascripts %}
    <script type="text/javascript" src="{{ asset('js/lib/require.js') }}"></script>
    <script type="text/javascript">

        require.config({
            baseUrl: '/js',
            paths: {
                'jquery': '/js/lib/jquery',
                'bootstrap': '/js/lib/bootstrap'
            },
            shim: {
                'bootstrap': {
                    deps: ['jquery']
                }
            }
        });

        require(['app/main']);
    </script>
    {% endblock %}
    {% block javascripts %}
    {% endblock %}
</body>
</html>