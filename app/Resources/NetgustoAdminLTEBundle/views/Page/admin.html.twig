{% set user = app.security.getToken().getUser() %}
{% embed 'NetgustoAdminLTEBundle:Page:component.admin.html.twig' %}
    {% block pagetitle %}Baïkal Server{% endblock %}
    
    {% block brand %}
        <a href="{{ path('netgusto_baikal_admin_dashboard') }}" class="logo">
            <img id="baikallogo" class="hidden-xxs-portrait" src="data:image/png;base64," height="40"/>
            Baïkal Server
        </a>
    {% endblock %}

    {% block leftmenu %}
        <div class="user-panel">
            <div class="pull-left image">
                <img src="{{ gravatar_avatar_url(user.email) }}" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>Hello, {{ user.username }}</p>

                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        {{ adminlte_leftmenu_render('NetgustoBaikalAdminBundle:Builder:leftMenu') }}
    {% endblock %}
{% endembed %}